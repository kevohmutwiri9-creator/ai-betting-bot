# ===============================
# AI Betting Bot - Environment Configuration
# ===============================

# ============================================
# FLASK & WEB SERVER CONFIG
# ============================================
FLASK_APP=main.py
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-in-production

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_NAME=your-bot-username
TELEGRAM_WEBHOOK_URL=https://your-domain.onrender.com/webhook
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-key

# ============================================
# FOOTBALL DATA API KEYS (Get FREE keys online)
# ============================================
# API-Football: https://www.api-football.com/
API_FOOTBALL_KEY=your-api-football-key

# Football-Data.org: https://www.football-data.org/
FOOTBALL_DATA_API_KEY=your-football-data-org-key

# RapidAPI (alternative football data)
RAPIDAPI_KEY=your-rapidapi-key

# ============================================
# BETTING PLATFORM API KEYS
# ============================================
# Betfair Exchange API
BETFAIR_API_KEY=your-betfair-api-key
BETFAIR_USERNAME=your-betfair-username
BETFAIR_PASSWORD=your-betfair-password

# Pinnacle API
PINNACLE_API_KEY=your-pinnacle-api-key
PINNACLE_USERNAME=your-pinnacle-username
PINNACLE_PASSWORD=your-pinnacle-password

# Bet365 API
BET365_API_KEY=your-bet365-api-key
BET365_USERNAME=your-bet365-username
BET365_PASSWORD=your-bet365-password

# DraftKings API
DRAFTKINGS_API_KEY=your-draftkings-api-key
DRAFTKINGS_CLIENT_ID=your-draftkings-client-id
DRAFTKINGS_CLIENT_SECRET=your-draftkings-client-secret

# ============================================
# KENYAN BETTING PLATFORMS (Manual Login Required)
# ============================================
# Betika - https://betika.com/
BETIKA_USERNAME=your-betika-username
BETIKA_PASSWORD=your-betika-password

# SportPesa - https://sportpesa.com/
SPORTPESA_USERNAME=your-sportpesa-username
SPORTPESA_PASSWORD=your-sportpesa-password

# Odibet - https://odibets.com/
ODIBET_USERNAME=your-odibet-username
ODIBET_PASSWORD=your-odibet-password

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=sqlite:///betting_data.db
# For PostgreSQL on Render:
# DATABASE_URL=postgresql://user:password@hostname:5432/database

# ============================================
# KELLY CRITERION SETTINGS
# ============================================
KELLY_FRACTION=0.5  # Use half Kelly (recommended)
MAX_STAKE_PERCENT=0.1  # Max 10% of bankroll per bet
MIN_STAKE=1.0  # Minimum stake amount

# ============================================
# AUTO-BETTING SETTINGS
# ============================================
AUTO_BET_ENABLED=false
MIN_VALUE_THRESHOLD=0.05  # Minimum value to place bet
CONFIDENCE_THRESHOLD=0.6  # Minimum AI confidence
BET_DELAY_SECONDS=30  # Delay before placing bet

# ============================================
# SELENIUM/BROWSER AUTOMATION
# ============================================
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=60
AUTO_LOGIN_ENABLED=false

# ============================================
# RENDER DEPLOYMENT SETTINGS
# ============================================
WEB_CONCURRENCY=2
TIMEOUT=120

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# NOTIFICATIONS
# ============================================
ENABLE_TELEGRAM_NOTIFICATIONS=true
NOTIFY_ON_BET_PLACED=true
NOTIFY_ON_BET_RESULT=true
NOTIFY_ON_VALUE_DETECTED=true

# ============================================
# DEBUG & LOGGING
# ============================================
LOG_LEVEL=INFO
DEBUG_MODE=false
